<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:layout_centerHorizontal="true"
        android:onClick="addPreStudyField"
        android:text="@string/create_prestudy_field"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="@dimen/text_input_width"
        android:layout_height="@dimen/text_input_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:hint="@string/enter_name"/>

    <Spinner
        android:layout_width="@dimen/text_input_width"
        android:layout_height="@dimen/text_input_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:id="@+id/type_spinner">
    </Spinner>

    <Button
        android:id="@+id/next"
        android:layout_width="@dimen/small_button_width"
        android:layout_height="@dimen/small_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="325dp"
        android:onClick="createStudyFields"
        android:text="@string/next_button"
        />

    <Button
        android:id="@+id/back"
        android:layout_width="@dimen/small_button_width"
        android:layout_height="@dimen/small_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="325dp"
        android:onClick="changeTemplateDetails"
        android:text="@string/back_button"
        />
</RelativeLayout>