<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ttu_se1_project_team_3.activities.SelectStudy">




    <TextView
        android:id="@+id/SelectStudyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select the Study you wish to conduct" />




    <Spinner
        android:id="@+id/nameSpinner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SelectStudyText"
        android:layout_width="@dimen/text_input_width"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        >

    </Spinner>


    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/SelectStudy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="25dp"
        android:text="Select"
        android:onClick="conductStudy"/>


</RelativeLayout>
